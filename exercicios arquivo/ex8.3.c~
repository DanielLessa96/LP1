#include <stdio.h>
#include <string.h>

int main(){
    char str[3][25];
    int i,j, tamanho;
    for (i=0; i<3;i++){
      printf("string:");
      scanf("%s", str[i]);
    }
    FILE* f = fopen("/tmp/guest-Ut3TFE/Área de Trabalho/exercicios arquivo/arq8.3.txt", "w");
    for (i=0; i<3;i++){
      tamanho = strlen(str[i]);
      for (j=0; j<tamanho; j++){
        fputc(str[i][j], f);
        fputc("\n", f);
      }
    }
    fclose(f);
    return 0;
} 


